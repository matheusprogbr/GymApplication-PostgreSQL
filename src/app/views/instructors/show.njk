{% extends 'layout.njk' %}

{% block navlinks %}
  <li><a href="/" class="active">Instructors</a></li>
  <li><a href="/members">Members</a></li>
{% endblock %}

{% block content %}
  <section class="card">

    <div class="container">

      <div class="avatar" style = "background-image: url({{instructor.avatar_url}})"></div>

      <div class="details">
        <h2 class="subtitle">Detalhes</h2>

        <div class="item">
          <span>Instrutor:</span>
          <span>{{instructor.name}}</span>
        </div><!-- item end -->

        <div class="item">
          <span>Idade:</span>
          <span>{{instructor.age}}</span>
        </div><!-- item end -->

        <div class="item">
          <span>Sexo:</span>
          <span>{{instructor.gender}}</span>
        </div><!-- item end -->

        <div class="item">
          <span>Acompanhamento:</span>
          <ul class="item-gym-list">
            {%for service in instructor.services%}
              <li>{{service}}</li>
            {%endfor%}
          </ul>
        </div><!-- item end -->

        <div class="item">
          <span>Desde -</span>
          <span>{{instructor.created_at}}</span>
        </div><!-- item end -->
      
      <a href="/instructors/{{instructor.id}}/edit" class="edit-btn">Editar</a>

      </div><!-- details end -->
    </div><!-- container end -->
  </section>
{% endblock content %}
